@page
@model SilverRazorPage.Pages.SilverPage.CreateModel

@{
    ViewData["Title"] = "Create";
    string role = HttpContext.Session.GetString("role");
    if (role != "1")
    {
        Response.Redirect("/Error");
    }
}

<div class="container mt-5">
    <h1 class="text-center text-primary">Create Silver Jewelry</h1>
    <p class="text-muted text-center mb-4">Fill in the details below to add a new piece of jewelry</p>
    <hr />
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <form method="post" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                @* Input fields *@
                <div class="form-group mb-3">
                    <label asp-for="SilverJewelry.SilverJewelryId" class="form-label"></label>
                    <input asp-for="SilverJewelry.SilverJewelryId" class="form-control" required />
                    <span asp-validation-for="SilverJewelry.SilverJewelryId" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="SilverJewelry.SilverJewelryName" class="form-label"></label>
                    <input asp-for="SilverJewelry.SilverJewelryName" class="form-control" required />
                    <span asp-validation-for="SilverJewelry.SilverJewelryName" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="SilverJewelry.SilverJewelryDescription" class="form-label"></label>
                    <textarea asp-for="SilverJewelry.SilverJewelryDescription" class="form-control" rows="3" required></textarea>
                    <span asp-validation-for="SilverJewelry.SilverJewelryDescription" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="SilverJewelry.MetalWeight" class="form-label"></label>
                    <input asp-for="SilverJewelry.MetalWeight" class="form-control" required />
                    <span asp-validation-for="SilverJewelry.MetalWeight" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="SilverJewelry.Price" class="form-label"></label>
                    <input asp-for="SilverJewelry.Price" class="form-control" required />
                    <span asp-validation-for="SilverJewelry.Price" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="SilverJewelry.ProductionYear" class="form-label"></label>
                    <input asp-for="SilverJewelry.ProductionYear" class="form-control" required />
                    <span asp-validation-for="SilverJewelry.ProductionYear" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="SilverJewelry.CreatedDate" class="form-label"></label>
                    <input asp-for="SilverJewelry.CreatedDate" class="form-control" value="@DateTime.Now" type="datetime" required />
                    <span asp-validation-for="SilverJewelry.CreatedDate" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="SilverJewelry.CategoryId" class="form-label"></label>
                    <select asp-for="SilverJewelry.CategoryId" class="form-select" asp-items="@(ViewData["Categories"] as SelectList)" required></select>
                    <span asp-validation-for="SilverJewelry.CategoryId" class="text-danger"></span>
                </div>

                <div class="d-grid mb-4">
                    <input type="submit" value="Create" class="btn btn-primary btn-lg" />
                </div>
            </form>
            <div class="mt-3 text-center">
                <a asp-page="Index" class="btn btn-link">Back to List</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}